# begin crush map
tunable choose_local_tries 0
tunable choose_local_fallback_tries 0
tunable choose_total_tries 50
tunable chooseleaf_descend_once 1
tunable straw_calc_version 2

# devices

# types
type 0 osd
type 1 host
type 2 chassis
type 3 rack
type 4 row
type 5 pdu
type 6 pod
type 7 room
type 8 datacenter
type 9 region
type 10 root

root hdd {
    alg straw
    hash 0  # rjenkins1
}

rule hdd {
    ruleset 1
    type <%=node['chef-bcs']['ceph']['pools']['radosgw']['settings']['type']%>
    min_size 1
    max_size 5
    step set_chooseleaf_tries 5
    step set_choose_tries 100
    step take hdd
    step chooseleaf indep 0 type <%=node['chef-bcs']['ceph']['pools']['radosgw']['settings']['chooseleaf']%>
    step emit
}
