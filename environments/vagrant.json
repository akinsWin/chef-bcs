{
  "name": "vagrant",
  "json_class": "Chef::Environment",
  "description": "Vagrant test environment",
  "cookbook_versions": {},
  "chef_type": "environment",
  "override_attributes": {
    "chef-bcs": {
      "users": [
        { "name": "operations", "comment": "Operations user", "passwd": "" }
      ],
      "authorization": {
        "sudo": {
          "include_sudoers_d": true,
          "users": ["operations"],
          "passwordless": "true"
        }
      },
      "cobbler": {
        "web_user": "cobbler",
        "interface": "enp0s3",
        "pxe_interface": "enp0s8",
        "server": "10.0.101.10",
        "dhcp_subnet": "10.0.101.0",
        "dhcp_range": "10.0.101.11 10.0.101.250",
        "kickstart": {
          "rootpw": "vagrant",
          "file": "rhel.ks",
          "sudoer": "vagrant",
          "user": { "name": "vagrant", "passwd": "vagrant" }
        },
        "http_port": 80,
        "https_port": 443,
        "xmlrpc_port": 25151,
        "distro": "CentOS-7-x86_64-Minimal-1511.iso",
        "os_name": "centos-7",
        "os_version": "7.1",
        "os_arch": "x86_64",
        "redhat_management_type": "off",
        "redhat_management_server": "xmlrpc.rhn.redhat.com",
        "redhat_management_key": "",
        "breed": "redhat"
      },
      "ceph": {
        "pgp_auto_adjust" : true,
        "osd": {
            "devices": [
                { "data": "/dev/sdb", "type": "hdd", "journal": "/dev/sdf" },
                { "data": "/dev/sdc", "type": "hdd", "journal": "/dev/sdf" },
                { "data": "/dev/sdd", "type": "hdd", "journal": "/dev/sdf" },
                { "data": "/dev/sde", "type": "hdd", "journal": "/dev/sdf" }
            ],
            "remove": {
              "devices": [
                { "node": "ceph-vm1", "osd": 0, "zap": true, "partition": 1, "data": "/dev/sdb", "journal": "/dev/sdf" }
              ]
            },
            "add": {
              "devices": [
                { "node": "ceph-vm3", "data": "/dev/sde", "type": "hdd", "journal": "/dev/sde" }
              ]
            }
        },
        "pools": {
          "active": ["radowgw"]
        }
      },
      "domain_name" : "ceph.example.com",
      "network": {
        "public": {
          "interface": "enp0s8",
          "netmask": "255.255.255.0",
          "cidr": "10.0.101.0/24",
          "gateway": "10.0.101.10",
          "mtu": 1500
        },
        "cluster": {
          "interface": "enp0s9",
          "netmask": "255.255.255.0",
          "cidr": "192.168.101.0/24",
          "gateway": "192.168.101.10",
          "mtu": 9000
        }
      },
      "dns_servers": [ "8.8.8.8", "8.8.4.4" ]
    },
    "chef_client": {
      "server_url": "http://10.0.101.10:4000",
      "cache_path": "/var/chef/cache",
      "backup_path": "/var/chef/backup",
      "validation_client_name": "chef-validator",
      "run_path": "/var/chef"
    }
  }
}
